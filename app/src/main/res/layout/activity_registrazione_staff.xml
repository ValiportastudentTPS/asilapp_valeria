<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:title="AsilApp"
        android:background="#fcd962"
        app:titleTextColor="#076AEC"
        app:titleTextAppearance="@style/ToolbarTitleText"
        />


    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="633dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">


        <TextView
            android:id="@+id/signupText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Registrazione"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/key_icon"
            android:drawablePadding="10dp"
            android:hint="password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/Cellulare"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/phone_icon"
            android:drawablePadding="8dp"
            android:hint="Cellulare"
            android:padding="8dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/mail_icon"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:padding="10dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/centro"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/refugee_icon"
            android:drawablePadding="10dp"
            android:hint="Centro"
            android:padding="10dp"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/confirmreg_staff"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#076AEC"
            android:text="CONFERMA"
            android:textSize="18sp"
            android:layout_gravity="center"
            app:cornerRadius="20dp" />

    </LinearLayout>

</LinearLayout>